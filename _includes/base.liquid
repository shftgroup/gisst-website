<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="{{ '/css/main.css' |  url }}" rel="stylesheet">
        <title>{{ title }}</title>
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container px-5">
                <a class="navbar-brand" href="#">GISST</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    {% assign navPages = collections.all | eleventyNavigation %}
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        {%- for entry in navPages %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ entry | url }}">{{ entry.title }}</a>
                            </li>
                        {% endfor %}
                </div>
            </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
            {% assign sideNavPages = collections.all |  eleventyNavigation %}
            <ul class="nav nav-pills flex-column mb-auto">
                {%- for entry in sideNavPages %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ entry | url }}">{{ entry.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="b-divider"></div>
        <div class="d-flex flex-column bg-light w-100">
            {{ content  }}
        </div>
    </main>
    </body>
</html>
